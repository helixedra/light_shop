{{> header }}
<main>
    <section class="content">
        {{!-- <form action="/user/logout?_method=DELETE" method="POST">
        <button type="submit">LOGOUT</button>
    </form> --}}
        <nav class="d-flex">
            <a href="/user/profile" class="nav-link">Профиль</a>
            <a href="/user/orders" class="nav-link active">Мои заказы</a>
        </nav>

        <table class="table">
            {{#if orders}}
                {{#each orders}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.delivery_option}}</td>
                        <td>{{this.payment_option}}</td>
                        <td>{{this.delivery_address}}</td>
                        <td>{{this.np_address}}</td>
                        <td>{{this.order_status}}</td>
                        <td>{{this.total}}</td>
                        <td>{{this.datetime}}</td>
                        <td>{{#each this.order_items}}
                                <div>{{this.pid}}</div>
                                <div>{{this.qty}}</div>
                                <div>{{this.price}}</div>
                                <div>{{this.title}}</div>
                                <div>{{this.cover_img}}</div>
                            {{/each}}</td>
                    </tr>
                {{/each}}
            {{else}}
                <div>У вас нет никаких заказов</div>
            {{/if}}
        </table>
    </section>
</main>


{{> footer }}