{{> header }}
<main>
    <section class="content">
        <div class="checkout-success-container d-flex align-items-center flex-column">
            <div>
                <img src="/images/shopping-cart-monochrome-thumbnail.png" width="260px">
            </div>
            <div class="checkout-success-msg">Ваш заказ принят!</div>
            <p class="checkout-success-details">Мы свяжемся с Вами в ближайшее время</p>
            <p class="checkout-success-number">Номер заказа<span>№{{order_id}}</span></p>
            <a href="/">
                <button class="primary-btn">Вернуться в магазин</button>
            </a>
        </div>
    </section>
</main>
{{#if success}}
    <script>localStorage.removeItem('cart-guest')</script>
{{/if}}
</div>

{{> footer }}